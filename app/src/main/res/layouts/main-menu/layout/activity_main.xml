<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    android:fadeScrollbars="false"
    tools:context=".activity.MainActivity">

    <Button
        android:id="@+id/items_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:onClick="launchMakeListActivity"
        android:text="@string/make_list_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/create_meal_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:onClick="launchCreateMealActivity"
        android:text="@string/create_meal_text"
        app:layout_constraintEnd_toEndOf="@+id/view_lists_button"
        app:layout_constraintStart_toStartOf="@+id/view_lists_button"
        app:layout_constraintTop_toBottomOf="@+id/view_lists_button" />

    <Button
        android:id="@+id/view_lists_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:onClick="launchViewListsActivity"
        android:text="@string/view_lists_text"
        app:layout_constraintEnd_toEndOf="@+id/items_button"
        app:layout_constraintStart_toStartOf="@+id/items_button"
        app:layout_constraintTop_toBottomOf="@+id/items_button" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/create_meal_button"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="@+id/create_meal_button"
        app:layout_constraintTop_toBottomOf="@+id/create_meal_button" />

</androidx.constraintlayout.widget.ConstraintLayout>